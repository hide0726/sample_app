
<h1>New Category</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@category) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :category_name %>
      <%= f.text_field :category_name %>

      <%= f.submit "Create new category", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>


