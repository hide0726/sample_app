<% case %>
 <% when Category.find(params[:id]).id == 0 %>
  <% @categorized_articles = @categorized_articles_0 %>
 <% when Category.find(params[:id]).id == 1 %>
  <% @categorized_articles = @categorized_articles_1 %>
 <% else %>
  <% @categorized_articles = @categorized_articles_2 %>
<% end %> 

<% if @categorized_articles.any? %>
 <ol class="microposts">
  <%= render partial: 'shared/articles_item', collection: @categorized_articles %>
  </ol>
  <%= will_paginate @categorized_articles %>
<% end %>
