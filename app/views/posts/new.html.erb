
<h3>記事作成</h3>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@post) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :abstract %>
      <%= f.text_area :abstract %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.label :category_id %>
      <%= f.select :category_id,
          [['一回生向け', 0], ['Sojin Voice', 1], ['その他', 2]]  %>

      <%= f.submit "Post", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
