<h3>記事編集</h3>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@article) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :abstract %>
      <%= f.text_area :abstract %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.label :category_id %>
      <%= f.select :category_id,
          [['一回生向け', 1], ['Sojin Voice', 2], ['その他', 3]]  %>

      <%= f.label :koukai %>
      <%= f.select :koukai,
          [['下書き', 0], ['公開', 1]]  %>

      <%= f.label :gentei %>
      <%= f.select :gentei,
          [['通常公開', 0], ['会員限定', 1]]  %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
 </div>
</div>
